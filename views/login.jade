extends layoutPlain

block content
    .login
        .card
            .card-body
                h5.card-title.text-center.text-muted 系统登录
                if message
                    .alert.alert-danger #{message}
                form(method='post', action='login')
                    .form-group
                        input.form-control(type='text', name='username', placeholder='用户名')
                    .form-group
                        input.form-control(type='password', name='password', placeholder='密码')
                    .form-group
                        input.btn.btn-success.btn-block(type='submit', value='登录')
                    div.text-right
                        a.card-link(href='#{PROJECT_NAME}/register') 注册
block scripts
